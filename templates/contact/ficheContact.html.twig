{% extends 'base.html.twig' %}

{% block title %}
Fiche contact
{% endblock %}

{% block body %}
<h1 class="text-center pt-3">Fiche contact</h1>

<div class="row pt-5">
    
        <div class="card mb-3 container" style="width: 18rem;" >
            <h4 class="card-title text-center pt-3">{{leContact.nom}} {{leContact.prenom}}</h4>
            <div class="row mx-auto pb-2 pt-2" style="width: 200px;">
                <img class="avatar" src={{leContact.avatar}} alt="contactPhoto" style="height: auto; max-width: 200px; display: block;">
            </div>
            <div class="col">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{leContact.rue}}</li>
                    <li class="list-group-item">{{leContact.cp}}</li>
                    <li class="list-group-item">{{leContact.ville}}</li>
                    <li class="list-group-item">{{leContact.mail}}</li>
                    <li class="list-group-item">
                        {% if leContact.sexe == 0 %}
                            <span class="hommes">Homme</span>
                        {% else %}
                             <span  class="femmes">Femme</span>
                        {% endif %}

                    </li>
                </ul>
                <div class="card-body">
                    <a href="{{path('contacts')}}" class="btn btn-success btn-block text-center w-100">Revenir Ã  la liste</a>
                </div>
            </div>
           
        </div>
    
</div>

{% endblock %}
