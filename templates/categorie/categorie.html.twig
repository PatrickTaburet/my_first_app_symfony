{% extends 'base.html.twig' %}

{% block title %}
Catégories
{% endblock %}

{% block body %}
<h1 class="text-center pt-3">{{categorie.libelle}}</h1>

<div class="row mx-auto justify-content-center align-items-center pt-4">
    <div class="card border-primary mb-3" style="max-width: 50%;">
        <div class="card-header text-center "><h4>{{categorie.libelle}}</h4></div>
        <div class="card-body display: flex; flex-direction: row;">
            <img class="mx-auto mt-3 categories" src={{categorie.image}} alt="categoriePhoto" style="height: 250px; width: 200px; display: block;">
            <p class="mt-4">{{categorie.description}}</p>
        </div>
        <div class="card-body mx-auto">
                <a href="{{path('categories')}}" class="btn btn-success btn-block text-center mb-4 ">Retour aux catégories</a>
        </div>
    </div>
</div>

<div class="row mx-auto pt-5">

    {% for leContact in categorie.contacts %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 ">
        <div class="card mb-3 mx-auto " style="width: 18rem;">
            <h3 class="card-title text-center pt-3">{{leContact.nom}} {{leContact.prenom}}</h3>
            <img class="avatar mx-auto pb-2 pt-2" src={{leContact.avatar}} alt="contactPhoto" style="height: 200px; width: 70%; display: block;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{leContact.rue}}</li>
                <li class="list-group-item">{{leContact.cp}}</li>
                <li class="list-group-item">{{leContact.ville}}</li>
                <li class="list-group-item">{{leContact.mail}}</li>
                <li class="list-group-item">
                      {% if leContact.sexe == 0 %}
                            <span class="hommes">Homme</span>
                        {% else %}
                             <span  class="femmes">Femme</span>
                        {% endif %}
                       
                </li>
                <li class="list-group-item"><a href="{{path('categorie', {'id': leContact.categorie.id})}}">{{leContact.categorie.libelle}}</a></li>
            </ul>
            <div class="card-body">
                <a href="{{path('contact', {'id': leContact.id})}}" class="btn btn-success btn-block text-center w-100">Détails ...</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
    
{% endblock %}
