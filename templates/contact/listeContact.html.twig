{% extends 'base.html.twig' %}

{% block title %}
Liste des contacts
{% endblock %}

{% block body %}
<h1 class="text-center pt-3">Liste des contacts</h1>

<div class="row mx-auto pt-5">
    {% for leContact in lesContacts %}
    <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3 ">
        <div class="card mb-3 mx-auto " style="width: 18rem;">
            <h3 class="card-title text-center pt-3">{{leContact.nom}} {{leContact.prenom}}</h3>
            <img class="avatar mx-auto pb-2 pt-2" src={{leContact.avatar}} alt="contactPhoto" style="height: 200px; width: 70%; display: block;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">{{leContact.rue}}</li>
                <li class="list-group-item">{{leContact.cp}}</li>
                <li class="list-group-item">{{leContact.ville}}</li>
                <li class="list-group-item">{{leContact.mail}}</li>
                <li class="list-group-item">
                    {% if leContact.sexe == 0 %}
                        <span>Homme</span>
                        {% else %}
                         <span>Femme</span>
                    {% endif %}
                       
                </li>
            </ul>
            <div class="card-body">
                <a href="#" class="btn btn-success btn-block text-center w-100">DÃ©tails ...</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
